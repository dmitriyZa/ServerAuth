@page
@model IdentityServerAspNetIdentity.Pages.Account.Register.IndexModel
@{

   <div>
    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-12 col-lg-6 offset-lg-3">
            <div class="card">
                <div class="card-header">
                    <h2>Регистрация</h2>
                </div>
                <div class="card-body">
                    <form asp-route="Register">
                        <input type="hidden" asp-for="Input.ReturnUrl" />
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input class="form-control" placeholder="Email" asp-for="Input.Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.LastName"></label>
                            <input class="form-control" placeholder="Фамилия" asp-for="Input.LastName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Name"></label>
                            <input class="form-control" placeholder="Имя" asp-for="Input.Name" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ParentName"></label>
                            <input class="form-control" placeholder="Отчество" asp-for="Input.ParentName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input type="password" class="form-control" placeholder="Пароль"
                                   asp-for="Input.Password" autofocus>  
                              
                        </div>                       
                        <button type="submit" class="btn btn-primary" name="button" value="register">Зарегистрировать</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a asp-page="../Login/Index" asp-route-returnUrl="@Model.Input.ReturnUrl">Вход в систему</a>
                </div>
            </div>
        </div>
    </div>

</div>
}




